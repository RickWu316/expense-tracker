<form action="/edit/{{record._id}}?_method=PUT" method="POST">
    <div class="mb-3 row">
        <div class="col-1">支出名稱</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入支出名稱" name="name" class="form-control" value="{{record.name}}">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">類別</div>
        <div class="col-auto">
            {{!-- <input type="text" placeholder="請填入類別" name="category" class="form-control"
                value="{{transferCN record.category}}"> --}}
            <select name="category">
                <option value="" {{#ifEquals record.category "" }} selected {{/ifEquals}}>請選擇類別</option>
                <option value="home" {{#ifEquals record.category "home" }}selected {{/ifEquals}}>家居物業</option>
                <option value="traffic" {{#ifEquals record.category "traffic" }}selected {{/ifEquals}}>交通出行</option>
                <option value="entertainment" {{#ifEquals record.category "entertainment" }}selected {{/ifEquals}}>休閒娛樂
                </option>
                <option value="food" {{#ifEquals record.category "food" }}selected {{/ifEquals}}>餐飲食品</option>
                <option value="other" {{#ifEquals record.category "other" }}selected {{/ifEquals}}>其他</option>

            </select>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">日期</div>
        <div class="col-auto">
            <input type="date" placeholder="請填入消費日期" name="date" class="form-control" value="{{record.date}}">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">消費金額</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入消費金額" name="amount" class="form-control" value="{{record.amount}}">
        </div>
    </div>

    <div class="input-group-append">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>