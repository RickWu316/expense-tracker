<form action="/" method="POST">
    <div class="mb-3 row">
        <div class="col-1">支出名稱</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入支出名稱" name="name" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">類別</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入類別" name="category" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">日期</div>
        <div class="col-auto">
            <input type="date" placeholder="請填入消費日期" name="date" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">消費金額</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入消費金額" name="amount" class="form-control">
        </div>
    </div>

    <div class="input-group-append">
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>