<h1>老爸私房錢</h1>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle btn-lg" type=" button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-expanded="false">
        類別
    </button>
    <form action="./" method="POST">
        <ul class="dropdown-menu " aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item " href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
        </ul>
    </form>
</div>

<div class="row">
    <div class="col-2">
        <h2>總金額</h2>
    </div>
    <div class="col-10">
        <h1>999999</h1>
    </div>

</div>
<div class="" name="list">

    {{#each record}}
    <div class="row border">
        <div class="col-1 text-center align-self-center">
            {{!-- <a>{{{this.category}}}</a> --}}
            <a>{{{transferIcon this.category}}}</a>
            {{!-- <a>{{{transferCN this.category}}}</a> --}}
        </div>
        <div class="d-flex flex-column col-5">
            <h2>{{this.name}}</h2>
            <h6>{{this.date}}</h6>
        </div>
        <div class="d-flex col-1 align-items-center">
            <h2>{{this.amount}}</h2>

        </div>

        <div class="d-flex col-auto align-items-center" name="function">
            {{!-- <h3 class="mr-1">刪除</h3> --}}

            <form action="./delete/:{{ this._id }}" method="POST">
                <button class="btn btn-danger mr-1" type="submit">刪除</button>
            </form>

            <a class="mr-1 btn btn-secondary" href="./edit/{{ this._id }}">修改</a>

        </div>
    </div>

    {{/each}}
</div>


<div class="d-flex justify-content-center mt-5">
    <a class="btn btn-primary" href="./new">新增支出</a>
</div>