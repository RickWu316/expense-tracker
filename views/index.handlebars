<h1>老爸私房錢</h1>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle btn-lg" type=" button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-expanded="false">
        {{#if filterType}} {{transferCN filterType}} {{else}}類別{{/if}}
    </button>
    <form action="./" method="GET">
        <ul class="dropdown-menu " aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item " href="/?filter=home">家居物業</a></li>
            <li><a class="dropdown-item" href="/?filter=shuttle">交通出行</a></li>
            <li><a class="dropdown-item" href="/?filter=fun">休閒娛樂</a></li>
            <li><a class="dropdown-item" href="/?filter=food">餐飲食品</a></li>
            <li><a class="dropdown-item" href="/?filter=other">其他</a></li>
        </ul>
        {{!--
        const categoryCN = ['家居物業', '交通出行', '休閒娛樂', '餐飲食品 ', '其他']

        const categorys = ['home', 'shuttle', 'fun', 'food', 'other'] --}}
    </form>
</div>

<div class="row">
    <div class="col-2">
        <h2>總金額</h2>
    </div>
    <div class="col-10">
        <h1>{{totalAmount}}</h1>
    </div>

</div>
<div class="" name="list">

    {{#each record}}
    <div class="row border">
        <div class="col-1 text-center align-self-center">
            {{!-- <a>{{{this.category}}}</a> --}}
            <a>{{{transferIcon this.category}}}</a>
            {{!-- <a>{{{transferCN this.category}}}</a> --}}
        </div>
        <div class="d-flex flex-column col-5">
            <h2>{{this.name}}</h2>
            <h6>{{this.date}}</h6>
        </div>
        <div class="d-flex col-1 align-items-center">
            <h2>{{this.amount}}</h2>

        </div>

        <div class="d-flex col-auto align-items-center" name="function">
            {{!-- <h3 class="mr-1">刪除</h3> --}}

            <form action="./delete/{{ this._id }}?_method=DELETE" method="POST">
                <button class="btn btn-danger mr-1" type="submit">刪除</button>
            </form>

            <a class="mr-1 btn btn-secondary" href="./edit/{{ this._id }}">修改</a>

        </div>
    </div>

    {{/each}}
</div>


<div class="d-flex justify-content-center mt-5">
    <a class="btn btn-primary" href="./new">新增支出</a>
</div>