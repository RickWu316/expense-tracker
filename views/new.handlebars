<form action="./new" method="POST">
    <div class="mb-3 row">
        <div class="col-1">支出名稱</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入支出名稱" name="name" class="form-control">
            <a class="text-danger">{{#if error}} {{error}}{{/if}}</a>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">類別</div>
        <div class="col-auto d-flex">
            {{!-- <input type="text" placeholder="請填入類別" name="category" class="form-control"> --}}
            {{!-- <input disabled> --}}
            <select name="category">
                <option value="" selected>請選擇類別</option>
                <option value="home">家居物業</option>
                <option value="traffic">交通出行</option>
                <option value="entertainment">休閒娛樂</option>
                <option value="food">餐飲食品</option>
                <option value="other">其他</option>

            </select>

        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">日期</div>
        <div class="col-auto">
            <input type="date" placeholder="請填入消費日期" name="date" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-1">消費金額</div>
        <div class="col-auto">
            <input type="text" placeholder="請填入消費金額" name="amount" class="form-control">
        </div>
    </div>

    <div class="input-group-append">
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>